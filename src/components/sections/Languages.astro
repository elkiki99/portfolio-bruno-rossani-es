---
import Section from "../Section.astro";

import { languages } from "@cv"
---

<Section title="Languages">
    <ul>
        {
            languages.map(({language, fluency}) => {
                return(
                    <li>
                        <article>
                            <header>
                                <h3>{language}</h3>
                                <p>{fluency}</p>
                            </header>
                        </article>
                    </li>
                )
            })
        }
    </ul>
</Section>

<style>
    ul {
        display: flex;
        flex-direction: column;
    }
    article h3 {
        font-weight: 500;
    }
    header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 4px;
    }
    p {
        margin-bottom: 16px;
    }
</style>