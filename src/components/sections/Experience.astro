---
import Section from "../Section.astro";

import { work } from "@cv"
---

<Section title="Experiencia">
    <ul>
        {work.map(({ name, startDate, endDate, position, summary, highlights }) => {
            const startYear = new Date(startDate).getFullYear();
            const endYear = endDate !== "" ? new Date(endDate).getFullYear() : "Current";
            const years = `${startYear} - ${endYear}`;
            return (
                <li>
                    <article>
                        <header>
                            <div>
                                <h3>{name}</h3>
                                <h4>{position}</h4>
                            </div>
                            <time>{years}</time>
                        </header>
                        <footer>
                            <p>{summary}</p>
                            <ul>
                                {highlights.map((highlight) => (
                                    <li><p>{highlight}</p></li>
                                ))}
                            </ul>
                        </footer>
                    </article>
                </li>
            );
        })}
    </ul>
<Section/>

<style>
    ul {
        display: flex;
        flex-direction: column;
    }
    article h3 {
        color: #111;
        font-weight: 500;
    }
    article h4 {
        font-weight: 400;
        color: #222;
        margin-bottom: 12px;
    }
    header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 4px;
    }
    time {
        color: #555;
        font-size: 0.85rem;
    }
    p {
        margin-bottom: 16px;
    }
</style>
